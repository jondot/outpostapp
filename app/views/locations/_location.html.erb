<article>
<span><%= location.path %></span>
<% location.uploads.each do | u | %>
  <div>
    <h3><a href="/download/<%= u.uuid %>"><%= u.file %></a></h3>
    <div><%= u.checksum || 'Checksum pending' %></div>
    
    <div class="footer">
      <div class="at">Uploaded at <%= u.created_at %> (<%= time_ago_in_words u.created_at%> ago)</div>
    </div>
  </div>
<% end  %>
</article>
